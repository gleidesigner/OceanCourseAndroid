<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gleidesilva.bookslibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.gleidesilva.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookDetailActivity"
            android:label="@string/title_activity_book_detail"
            android:parentActivityName="com.gleidesilva.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gleidesilva.bookslibrary.com.gleidesilva.MainActivity" />
        </activity>
    </application>

</manifest>